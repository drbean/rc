#!/usr/bin/perl

use strict;
use warnings;
use IO::All;
use YAML::XS qw/LoadFile DumpFile/;
use Cwd;

$_REPL->load_plugin('DumpHistory');

my @two = glob 'academic/2/*.txt';
my @word;
($word[$_] = $two[$_]) =~ s|academic/2/(.*).txt|$1| for ( 0 .. $#two );
my @text;
for my $i ( 0 .. $#two ) { push @text, $word[$i] . ": " . io->file( $two[$i] )->slurp };
io("academic/two.yaml")->print(@text);
